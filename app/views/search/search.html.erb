<head>
    <meta http-equiv="refresh" content="3;url=http://demo.csye7200.xyz/showresult?query=<%= params[:query]%>&token=<%= @token %>">
</head>

<%= params[:query]%>
<br>
<% TWITTER.search(params[:query], result_type: "recent", tweet_mode: "extended").take(1).collect do |tweet|%>
    <% KAFKA.deliver_message(params[:query] + "%%%%%" + @token + "%%%%%" + tweet.text + "%%%%%" + tweet.favorite_count + "%%%%%" + tweet.reply_count + "%%%%%" + tweet.retweet_count, topic: "twitterdata") %>
    <%= tweet.full_text %>
    <br>
    <%= tweet.favorite_count %>
    <br>
    <%= tweet.reply_count %>
    <br>
    <%= tweet.retweet_count %>
    <%= tweet.attrs %>
<% end %>