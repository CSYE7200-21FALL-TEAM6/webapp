<head>
    <meta http-equiv="refresh" content="3;url=http://demo.csye7200.xyz/showresult?query=<%= params[:query]%>&token=<%= @token %>">
</head>

<%= params[:query]%>
<br>
<% TWITTER.search(params[:query], result_type: "recent", tweet_mode: "extended").take(100).collect do |tweet|%>
    <% KAFKA.deliver_message(params[:query] + "%%%%%" + @token + "%%%%%" + tweet.text + "%%%%%" + tweet.favourites_count.to_s + "%%%%%" + tweet.retweet_count.to_s, topic: "twitterdata") %>
    <%= tweet.full_text %>
    <br>
    favorite_count:
    <%= tweet.favourites_count %>
    <br>
    retweet_count:
    <%= tweet.retweet_count %>
    <%= tweet.attrs %>
<% end %>